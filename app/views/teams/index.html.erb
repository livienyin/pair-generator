<h1>Listing teams</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Team Members</th>
    <th></th>
    <th></th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td>
      <% team.people.each do |person| %>
      <%= person.name %>
      <% end %>
    </td>
    <td><%= link_to 'Show', team %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

